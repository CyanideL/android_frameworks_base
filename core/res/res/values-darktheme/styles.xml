    <!-- Changing Text Color -->
    <style name="TextAppearance.Material.Large.Dark">
        <item name="textSize">@dimen/text_size_large_material</item>
        <item name="textColor">@color/primary_text_material_dark</item>
    </style>

    <style name="TextAppearance.Material.Small.Dark">
        <item name="textSize">@dimen/text_size_small_material</item>
        <item name="textColor">@color/secondary_text_material_dark</item>
    </style>

    <!-- Changing Text Notifications Color -->
    <style name="TextAppearance.Material.Notification">
        <item name="textColor">@color/secondary_text_material_dark</item>
        <item name="textSize">@dimen/notification_text_size</item>
    </style>

